{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/index", //* 登录页
			"style": {
				// "navigationBarTitleText": "登录"
				"navigationStyle":"custom"
			}
		},
		{
			"path": "pages/index/index", //* 首页
			"style": {
				// "navigationBarTitleText": "首页",
				"navigationStyle":"custom"
			}
		},
		{
			"path": "pages/order/add/index", //* 订单新增
			"style": {
				// "navigationBarTitleText": "订单新增",
				"navigationStyle":"custom"
			}
		}
		// {
		// 	"path": "pages/order/other/detailLine", //* 新增明细行
		// 	"style": {
		// 		// "navigationBarTitleText": "新增明细行",
		// 		"navigationStyle":"custom"
		// 	}
		// }
	],
	"globalStyle": {
		"navigationBarTextStyle": "white", //* 导航栏标题颜色及状态栏前景颜色，仅支持 black/white
		"navigationBarTitleText": "中法移动下单", //* 导航栏标题
		"navigationBarBackgroundColor": "#007aff", //* 导航栏背景颜色（同状态栏背景色），如"#000000"
		// "enablePullDownRefresh": true, //* 是否开启下拉刷新, 默认 false
		"backgroundColor": "#e6e6e6", //* 窗口的背景色
		"backgroundTextStyle": "light" //* 下拉 loading 的样式，仅支持 dark/light
	}
}
